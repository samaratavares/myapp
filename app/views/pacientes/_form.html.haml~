= form_for @paciente do |f|
  - if @paciente.errors.any?
    #error_explanation
      %h2= "#{pluralize(@paciente.errors.count, "error")} prohibited this paciente from being saved:"
      %ul
        - @paciente.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :endereco
    = f.text_field :endereco
  .field
    = f.label :telefone
    = f.text_field :telefone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :cpf
    = f.text_field :cpf
  .actions
    = f.submit 'Save'
